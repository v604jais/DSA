package arrays;

public class MaximumCircularSubArraySum {

	public static void main(String[] args) {
		
		int a[]= {1,-2,1,2-2,3};
		int max_sum=0,curr_sum=0,circu_sum=0,cicu_max=0;
		for(int i=0;i<a.length;i++) {
			
			
			curr_sum+=a[i];
			max_sum=Math.max(max_sum, curr_sum);
			System.out.println(max_sum+ " : "+curr_sum);
		}
			for(int i=0; i<a.length;i++) {
			for(int j=1;j<a.length;j++) {
				int index=(i+j)%a.length;
				circu_sum+=a[index];
			//	cicu_max=Math.max(cicu_max, circu_sum);
				
			}
			
		}
		System.out.println(Math.max(max_sum,cicu_max));
		
		

	}

}
