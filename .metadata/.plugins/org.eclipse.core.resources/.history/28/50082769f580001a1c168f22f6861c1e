package arrays;

public class LeftRotateBy1 {

	public static void main(String[] args) {
		
		int arr[]= {1,2,3,4,5};
		
		leftRotateByOne(arr,1);
		
		
		for(int i=0; i<arr.length-1;i++) {
			System.out.println(arr[i]);
		}
	}
    
	public static int[] leftRotateByOne(int []arr, int time) {
		int leftShift=time;
		int backUp[]=new int[time];
		//backing up
		while(time-->=0) {
			int count=0;
			backUp[time--]=arr[count++];
		}
		
		//shifting 
		int filling=0;
		for(int i=0; i<arr.length-leftShift;i++) {
			arr[i]=arr[i+1];
			filling++;
		}
		
		//filling 
		int size=backUp.length;
		while(size-->0) {
		  int j=0;	
		  arr[filling++]=backUp[j++];
		}
		return arr;
	}
}
