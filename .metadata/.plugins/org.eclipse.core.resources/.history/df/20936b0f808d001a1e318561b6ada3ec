package arrays;


import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Map.Entry;


public class MultiArray {

	public static void main(String[] args) {
		
		Integer a[]= {1,2,3,4};
		int b[]= {5,6,7};
		int c[]= {8,9,10};
		Integer B[]=Arrays.stream(b).boxed().toArray(Integer[]::new);
		Integer C[]=Arrays.stream(c).boxed().toArray(Integer[]::new);
		ArrayList<Integer> D=(ArrayList<Integer>) Arrays.asList(a);
		ArrayList<Integer> E=(ArrayList<Integer>) Arrays.asList(B);
		ArrayList<Integer> F=(ArrayList<Integer>) Arrays.asList(C);
		Map<Integer,ArrayList<Integer>> map= new HashMap<>();
       
		map.put(0, D);
		map.put(1, E);
		map.put(2, F);
		System.out.println(map);
		for (Entry<Integer, ArrayList<Integer>> entry : map.entrySet()) {
		    System.out.println("Key = " + entry.getKey() + ", Value = " + entry.getValue());
		}
		
	}

}
