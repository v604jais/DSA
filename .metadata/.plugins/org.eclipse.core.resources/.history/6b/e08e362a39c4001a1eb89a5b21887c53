package sorting;

public class MergeSort {

	
	
	public static void main(String[] args) {
		
       int arr[]= {1,2,5,8,9,11,3,4,1};
       
       int lb=0;
       int ub=arr.length-1;
       
       mergeSort(arr,lb,ub);
       
       for(int e :arr)
    	   System.out.println(e);
	}

	private static int[] mergeSort(int[] arr, int lb, int ub) {
		int[] sorted=new int[arr.length];
		if(lb<ub) {
			
			int mid=(lb+ub)/2;
			mergeSort(arr,lb,mid);
			mergeSort(arr,mid+1,ub);
		    sorted=merge(arr,lb,mid,ub);
			
		}
		
		return sorted;
	}

	private static int[] merge(int[] arr, int lb, int mid, int ub) {
		
		int i=lb;
		int j=mid+1;
		int k=lb;
		int[] b =new int[arr.length];
		while(i<=mid && j<=ub) {
			if(arr[i]<=arr[j]) {
				b[k]=arr[i];
				i++;
			}else {
				b[k]=arr[j];
				j++;
			}  k++;
		}
		if(i>mid)
		    {  
			 while(j<=ub) {b[k]=arr[j];k++;j++;}
			}
		else {
		   while(i<=mid) {b[k]=arr[i];k++;i++;}
		  }
		return b;
	}

}
