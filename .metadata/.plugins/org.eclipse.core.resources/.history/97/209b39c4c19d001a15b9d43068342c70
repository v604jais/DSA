package competetive;

public class TataCliq2 {

	public static void main(String[] args) {
		
		int [] h = {15,15,15,15};
		int [] p =  {18,18,1,17};
		int n=1;
		int sum=0;
		for(int i=1; i<h.length;i+=2) {
			
			if(h[i-1]==h[i] && h[i]==h[i+1]) {
				
				   if(p[i-1]>=p[i] && p[i-1]>=p[i+1])
					{ 
					   sum+=p[i-1]+p[i+1];
				       n=2;
					}
				    else if(p[i+1]>=p[i] && p[i+1]>=p[i]) {
				    	 sum+=p[i+1]+p[i-1];
					     n=2;
				    }else {
				    	 sum+=p[i];
				    	 n=2;
				    }
			}
		}
      System.out.println(sum);
	}

}
